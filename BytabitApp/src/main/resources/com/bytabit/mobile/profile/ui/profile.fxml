<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<View fx:id="profileView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600.0" prefWidth="350.0"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bytabit.mobile.profile.ui.ProfilePresenter">
    <center>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
                <GridPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label focusTraversable="false" text="Public Name"/>
                        <Label focusTraversable="false" text="Phone Number"
                               GridPane.rowIndex="1"/>
                        <TextField fx:id="userNameTextField" maxHeight="-Infinity"
                                   GridPane.columnIndex="1"/>
                        <TextField fx:id="phoneNumTextField" maxHeight="-Infinity"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </children>
                    <opaqueInsets>
                        <Insets top="10.0"/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </GridPane>
                <FlowPane fx:id="actionButtonsPane" alignment="CENTER"
                          columnHalignment="CENTER" style="-fx-hgap: 5; -fx-vgap: 5;">
                    <children>
                        <Button fx:id="saveProfileButton" defaultButton="true"
                                mnemonicParsing="false" text="Save Profile"/>
                    </children>
                    <padding>
                        <Insets top="20.0"/>
                    </padding>
                </FlowPane>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </center>
</View>
