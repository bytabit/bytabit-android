<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<View fx:id="paymentView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600.0" prefWidth="350.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bytabit.mobile.profile.ui.PaymentPresenter">
    <top>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="35.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Currency"/>
                <Label text="Payment Method" GridPane.rowIndex="1"/>
                <Label fx:id="paymentDetailsLabel" text="Payment Details"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="paymentDetailsTextField" GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>
                <ChoiceBox fx:id="currencyChoiceBox" maxWidth="-Infinity"
                           GridPane.columnIndex="1"/>
                <ChoiceBox fx:id="paymentMethodChoiceBox" maxWidth="-Infinity"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <children>
                        <Button fx:id="addPaymentDetailButton" mnemonicParsing="false"
                                text="ADD"/>
                        <Button fx:id="removePaymentDetailButton" mnemonicParsing="false"
                                text="REMOVE"/>
                    </children>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                    <GridPane.margin>
                        <Insets top="10.0"/>
                    </GridPane.margin>
                </HBox>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
    </top>
</View>
