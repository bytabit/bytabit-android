<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<View fx:id="depositView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="600.0" prefWidth="350.0"
      xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bytabit.mobile.wallet.ui.DepositPresenter">
    <top>
        <VBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="qrCodeImageView" fitHeight="200.0" fitWidth="200.0"
                           pickOnBounds="true" preserveRatio="true"/>
                <Label alignment="CENTER" contentDisplay="CENTER"
                       text="BTC Deposit Address:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label fx:id="bitcoinAddressLabel" alignment="CENTER"
                       contentDisplay="CENTER" text="Unknown">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Button fx:id="copyButton" alignment="CENTER" contentDisplay="CENTER"
                        mnemonicParsing="false" text="COPY" visible="false"/>
            </children>
        </VBox>
    </top>
</View>
