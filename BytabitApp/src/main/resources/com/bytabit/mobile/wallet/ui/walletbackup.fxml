<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<View fx:id="walletBackupView" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="350.0"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bytabit.mobile.wallet.ui.WalletBackupPresenter">
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <TextArea fx:id="profilePubKeyTextArea" editable="false" prefHeight="60.0"
                          text="PROFILE PUBKEY" wrapText="true"/>
                <Button fx:id="copyProfilePubKeyButton" mnemonicParsing="false"
                        text="COPY PROFILE PUBKEY"/>
                <TextArea fx:id="seedWordsTextArea" editable="false" prefHeight="60.0"
                          text="SEED WORDS" wrapText="true"/>
                <Button fx:id="copySeedWordsButton" mnemonicParsing="false"
                        text="COPY SEED WORDS"/>
                <TextArea editable="false" prefHeight="75.0" text="XPRV" wrapText="true"
                          fx:id="xprvTextArea">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </TextArea>
                <Button fx:id="copyXprvButton" mnemonicParsing="false" text="COPY XPRV"/>
                <TextArea editable="false" layoutX="25.0" layoutY="147.0"
                          prefHeight="75.0" text="XPUB" wrapText="true"
                          fx:id="xpubTextArea">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </TextArea>
                <Button fx:id="copyXpubButton" layoutX="138.0" layoutY="207.0"
                        mnemonicParsing="false" text="COPY XPUB"/>
            </children>
            <padding>
                <Insets left="15.0" right="15.0" top="20.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </center>
</View>
