<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<View fx:id="addOfferView" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="350.0"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bytabit.mobile.offer.ui.AddOfferPresenter">
    <center>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
                <GridPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="35.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Currency" GridPane.rowIndex="1"/>
                        <Label text="Payment Method" GridPane.rowIndex="2"/>
                        <ChoiceBox fx:id="currencyChoiceBox" maxWidth="-Infinity"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <ChoiceBox fx:id="paymentMethodChoiceBox" maxWidth="-Infinity"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label focusTraversable="false" text="Min Trade Amt"
                               GridPane.rowIndex="3"/>
                        <Label focusTraversable="false" text="Max Trade Amt"
                               GridPane.rowIndex="4"/>
                        <Label focusTraversable="false" text="Price per BTC"
                               GridPane.rowIndex="5"/>
                        <Button fx:id="addOfferButton" mnemonicParsing="false" text="ADD"
                                GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <GridPane.margin>
                                <Insets top="10.0"/>
                            </GridPane.margin>
                        </Button>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0"
                              GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <children>
                                <TextField fx:id="minTradeAmtTextField"
                                           maxHeight="-Infinity"/>
                                <Label fx:id="minTradeAmtCurrencyLabel" contentDisplay="CENTER" text="CUR">
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0"
                              GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <children>
                                <TextField fx:id="maxTradeAmtTextField"
                                           maxHeight="-Infinity"/>
                                <Label fx:id="maxTradeAmtCurrencyLabel" contentDisplay="CENTER" text="CUR">
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0"
                              GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <children>
                                <TextField fx:id="btcPriceTextField"
                                           maxHeight="-Infinity"/>
                                <Label fx:id="btcPriceCurrencyLabel" contentDisplay="CENTER" text="CUR">
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </HBox>
                        <ChoiceBox fx:id="offerTypeChoiceBox" maxWidth="-Infinity"
                                   GridPane.columnIndex="1"/>
                        <Label text="Type"/>
                    </children>
                    <opaqueInsets>
                        <Insets top="10.0"/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </GridPane>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </center>
</View>
