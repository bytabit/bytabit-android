      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bytabit.mobile.offer.ui.OfferDetailsPresenter">
    <center>
        <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <children>
                <GridPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="45.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Currency" GridPane.rowIndex="1"/>
                        <Label text="Payment Method" GridPane.rowIndex="2"/>
                        <Label focusTraversable="false" text="Min Trade Amt"
                               GridPane.rowIndex="3"/>
                        <Label focusTraversable="false" text="Max Trade Amt"
                               GridPane.rowIndex="4"/>
                        <Label focusTraversable="false" text="Price per BTC"
                               GridPane.rowIndex="5"/>
                        <Button fx:id="removeOfferButton" mnemonicParsing="false"
                                text="REMOVE" GridPane.columnIndex="1"
                                GridPane.rowIndex="6">
                            <GridPane.margin>
                                <Insets top="10.0"/>
                            </GridPane.margin>
                        </Button>
                        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1"
                              GridPane.rowIndex="3">
                            <children>
                                <Label fx:id="minTradeAmtLabel" text="TBD"/>
                                <Label fx:id="minTradeAmtCurrencyLabel" contentDisplay="CENTER" text="CUR">
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1"
                              GridPane.rowIndex="4">
                            <children>
                                <Label fx:id="maxTradeAmtLabel" text="TBD"/>
                                <Label fx:id="maxTradeAmtCurrencyLabel" contentDisplay="CENTER" text="CUR">
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1"
                              GridPane.rowIndex="5">
                            <children>
                                <Label fx:id="priceLabel" text="TBD"/>
                                <Label fx:id="priceCurrencyLabel" contentDisplay="CENTER" text="CUR">
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </HBox>
                        <Label fx:id="currencyLabel" text="TBD" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                        <Label fx:id="paymentMethodLabel" text="TBD"
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label text="Type"/>
                        <Label fx:id="typeLabel" text="TBD" GridPane.columnIndex="1"/>
