                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </GridPane>
                <GridPane fx:id="buyGridPane" maxHeight="-Infinity" maxWidth="1.7976931348623157E308">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0"
                                        vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label focusTraversable="false" text="Currency Amt"/>
                        <Label focusTraversable="false" text="BTC Amt"
                               GridPane.rowIndex="1"/>
                        <Button fx:id="tradeBtcButton" mnemonicParsing="false" text="BUY"
                                GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <GridPane.margin>
                                <Insets top="10.0"/>
                            </GridPane.margin>
                        </Button>
                        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1">
                            <children>
                                <TextField fx:id="buyCurrencyAmtTextField"
                                           prefWidth="150.0"/>
                                <Label fx:id="currencyAmtLabel" contentDisplay="CENTER" text="CUR">
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <TextField fx:id="buyBtcAmtTextField" editable="false"
                                           focusTraversable="false" prefWidth="150.0"/>
                                <Label fx:id="btcPriceCurrencyLabel" contentDisplay="CENTER" text="BTC">
                                    <padding>
                                        <Insets left="5.0"/>
                                    </padding>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                    <opaqueInsets>
                        <Insets top="10.0"/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </GridPane>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </center>
</View>
